{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "jsx":"preserve",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": false,
    "outDir": "build",
    "removeComments": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib":["dom", "es2015", "es2016", "es2017", "esnext"]
  },
  "files": ["types.d.ts"],
  "include":["src"],
  "exclude": ["node_modules", "build", ".temp"]
}